[
    {
        "op": "add",
        "path": "/machine/kubelet/extraMounts",
        "value": [
            {
                "destination": "/var/mnt/ssd",
                "type": "bind",
                "source": "/var/mnt/ssd",
                "options": [
                    "bind",
                    "rshared",
                    "rw"
                ]
            }
        ]
    },
    {
        "op": "replace",
        "path": "/machine/disks",
        "value": [
            {
                "device": "/dev/sda",
                "partitions": [
                    {
                        "mountpoint": "/var/mnt/ssd"
                    }
                ]
            }
        ]
    }
]